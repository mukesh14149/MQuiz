<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.mukesh.mquiz.MainActivity">

    <TextView
        android:id="@+id/Query"
        style="@style/Query_View"/>

    <Button
        android:id="@+id/Correct"
        android:text="@string/Correct"
        style="@style/Option_Button"
        android:layout_below="@+id/Query"
        android:layout_alignLeft="@+id/Wrong"
        android:layout_alignStart="@+id/Wrong" />

    <Button
        android:id="@+id/Wrong"
        android:text="@string/Wrong"
        android:layout_below="@+id/Correct"
        style="@style/Option_Button"/>


    <Button
        android:id="@+id/Hint"
        android:text="@string/hint"
        android:layout_below="@+id/Wrong"
        style="@style/Option_Button"/>

    <Button
        android:id="@+id/Cheat"
        android:text="@string/cheat"
        android:layout_below="@+id/Hint"
        style="@style/Option_Button"/>

    <Button
        android:layout_width="@dimen/next_button_width"
        android:layout_height="@dimen/next_button_height"
        android:text="@string/Next_ques"
        android:id="@+id/Next_ques"
        style="@style/Option_Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
